<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:backgroundTint="#FEFEFE">


    <ImageView
        android:layout_width="310dp"
        android:layout_height="392dp"
        android:layout_marginStart="40dp"
        android:layout_weight="1"
        android:src="@drawable/main_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3A55A0"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:text="𝐖𝐞 𝐰𝐢𝐥𝐥 𝐡𝐞𝐚𝐥 𝐲𝐨𝐮 !!"
                android:textColor="#6EA345"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:paddingBottom="8dp"
                android:text="𝟏.Search for doctor"
                android:textColor="#FAA42B"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:paddingBottom="8dp"
                android:text="𝟐.Find nearest medical store"
                android:textColor="#FAA826"
                android:textSize="20sp" />




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#66A9B2"
            android:id="@+id/continuee"
            android:padding="16dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
          </LinearLayout>
</LinearLayout>
</LinearLayout>
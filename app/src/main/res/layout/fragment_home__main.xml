<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage">


    <TextView
        android:id="@+id/tv_my_recent_cvs"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:background="#095627"
        android:text="MEDIKIT"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="162dp"
        android:layout_height="159dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_my_recent_cvs"
        android:layout_centerHorizontal="true"
        android:src="@drawable/medi2" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@id/img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="103dp"
            android:orientation="horizontal"
            android:background="@drawable/linearbg"
            android:padding="20dp"
            android:gravity="start"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_search_24" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Search For Doctor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="103dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/linearbg"
            android:gravity="start"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_search_24" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Search For Medical Store"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="13dp"
                android:textSize="25sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>